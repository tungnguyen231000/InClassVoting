
@{
    ViewBag.Title = "CreatePoll";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/Test.css">


<div class="bg-gray-100 flex-1 p-6 md:mt-16">

    @using (Html.BeginForm("CreatePoll", "Poll", FormMethod.Post))
    {
        <div class="w-full items-center bg-gray " style="margin-bottom:10px">
            <div class="text-center">
                <h1 class="h3">
                    <span>Poll</span>
                </h1>


            </div>

            <div style="display:flex;margin-bottom:20px;margin-top:10px">
                <div style="display:flex">
                    <h1 class="quiz-lable">Poll Name: </h1>
                    <input type="text" id="pollName" style="height:30px;margin-top:18px;margin-left:15px;margin-right:20px" class="fill-input" name="pollName" placeholder="...">
                </div>
                <div style="margin-top:16px">
                    <span class="quiz-lable">Time:</span>
                    <input class="border border-black-400 pl-1 w-4/12" id="timePoll" type="number" name="time" placeholder="....">
                </div>
                <div style="display:flex">
                    <h1 class="quiz-lable">Poll Mode: </h1>
                    <input id="papeQuiz" class="mode-rdb pollType" name="rdPollType" type="radio" value="1" checked />
                    <h4 class="label-mode-content-3">Allow student choose multiple answer</h4>
                    <input id="qQuiz" class="mode-rdb pollType" name="rdPollType" type="radio" value="0" />
                    <h4 class="label-mode-content-3"> Allow student choose one answer</h4>
                    @* <button type="button" style="width: 177px;" class="label-preview"><i class="fas fa-eye" style="margin-right:5px"></i>Preview</button>*@
                </div>
            </div>

        </div>
        <div class="grid grid-cols-1 w-full">
            <div class="w-full items-center bg-gray p-6 border border-black-400">
                <div style="margin-bottom:5px">
                    <span class="question-num-2">Question:</span>
                </div>

                <div>
                    <textarea class="p-2 w-full" name="questionText" rows="4" id="question" placeholder=" ..."></textarea>
                </div>

            </div>

            <div class=" w-full items-center bg-gray p-6 border border-black-400">
                <table id="table-poll" class="w-full border-spacing-2 option-table">

                    @for (int i = 0; i < 6; i++)
                    {
                        int no = i + 1;
                        <tr id="poll-option">
                            <td><span>@no</span></td>
                            <td class="w-full"><input type="text" class="w-full p-3 mt-2 option" name="option" placeholder="text..."></td>
                            <td class="w-2"><i id="remove-option-poll" class="far fa-times-circle my-3 p-2"></i></td>
                        </tr>
                    }


                </table>
                <div class="text-center flex flex-wrap items-center justify-center column-gap inline-block mt-4">
                    <input type="button" value="Add more option" class="option-btn btn btn-gray mt-2 w-6/12 border-dashed border-2 " />
                </div>
            </div>



            <div class="form-group">
                <div class="">
                    <input type="submit" value="Create Poll" class="btn btn-default mt-2 w-full start-test2" />
                </div>
            </div>
        </div>
    }

</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jqueryui/jquery-ui.min.js"></script>
<script src="~/Scripts/TestJS.js"></script>
