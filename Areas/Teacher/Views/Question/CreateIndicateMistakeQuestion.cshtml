
@{
    ViewBag.Title = "CreateIndicateMistakeQuestion";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}


<!--Thêm thư viện bootstrap.min.css-->
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/error.css">

<div class="bg-gray-100 flex-1 p-6 md:mt-16">
    @using (Html.BeginForm("CreateIndicateMistakeQuestion", "Question", FormMethod.Post, new { enctype = "multipart/form-data", id = "indicate-form" }))
    {
        <div class="grid grid-cols-1 w-full ">

            <div class="w-full items-center bg-gray ">
                <div class="text-center">
                    <h1 class="h3">
                        <span>Question Type:</span>
                        <span>Indicate Mistake</span>
                        <input type="hidden" name="previousUrl" value="@ViewBag.Previous" />
                        <input type="hidden" name="chid" value="@ViewBag.ChapterID" />
                    </h1>
                </div>

                <div class="flex md:mx-16">
                    <div class="m-6  ">
                        <span><b>Time:</b></span>
                        <input class="border border-black-400 pl-1 w-4/12" id="timeIndicate" type="number" name="time" placeholder="...">
                    </div>
                    <div class="m-6  ">
                        <span><b>Mark:</b></span>
                        <input class="border border-black-400 pl-1 w-4/12" id="markIndicate" type="number" name="mark" placeholder="...">
                    </div>
                </div>
            </div>

            <div class="w-full items-center bg-gray p-6 border border-black-400">
                <div>
                    <span><b>Question:</b> </span>
                </div>
                <div class="w-full  float-left mt-3">
                    <textarea class="p-2 w-full" name="questionText" rows="6" id="questionIndicate" placeholder="...."></textarea>
                </div>
            </div>

            <div class="w-full items-center bg-gray p-6 border border-black-400">
                <div class="ms-error"></div>
                <table class="w-full border-spacing-2" style="border-collapse: separate; border-spacing: 22px">
                    <tr>
                        <td>Answer : <input type="text" style="width:90%" class="w-full pl-3" id="answerIndicate" name="answer" placeholder="Correct Answer"></td>
                    </tr>
                </table>
            </div>

            <div class="text-center flex flex-wrap items-center justify-center column-gap inline-block mt-4">
                <input type="submit" id="submitIndicate" class="btn btn-bs-primary w-3/12" name="submit" value="Create Question">
            </div>

        </div>
    }

    <br />
    <br />
    <div class="w-full items-center bg-gray p-6 border border-black-400 h5">
        <h1 class="h4">Example: Indicate Mistake Question</h1>

        <p class="h5" style="color:blue">
            Put the letter present for the answer in front of the option and add the "-" between them<br/>
            Put the right answer in the text box below
        </p>

        Became ill when she was <span style="background-color:lemonchiffon">(A-11)</span> years old.
        She wasn’t strong enough to work or <span style="background-color:lemonchiffon">(B-walk)</span>
        She went to <span style="background-color:lemonchiffon">(C-an USA)</span> for an operation.
        She decided to try <span style="background-color:lemonchiffon">(D-to swim)</span> with dolphins as a new treatment.
        <br />
        <br />
        Answer : <input type="text" style="background-color: white; width: 90%" id="answerIndicate" class="w-full pl-3" value="D" disabled>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/validate.js"></script>
