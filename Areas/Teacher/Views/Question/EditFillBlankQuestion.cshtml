
@{
    ViewBag.Title = "EditFillBlankQuestion";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}


<div class="bg-gray-100 flex-1 p-6 md:mt-16">
    @using (Html.BeginForm("EditFillBlankQuestion", "Question", FormMethod.Post, new { enctype = "multipart/form-data", id = "fillblank-form" }))
    {
        <div class="grid grid-cols-1 w-full ">

            <div class="w-full items-center bg-gray">
                <div class="text-center">
                    <h1 class="h6">
                        <span>Question Type:</span>
                        <span>Fill Blank</span>
                        <input type="hidden" name="previousUrl" value="@ViewBag.Previous" />
                        <input type="hidden" name="chid" value="@ViewBag.ChapterID" />
                        <input type="hidden" name="qid" value="@ViewBag.Question.QID" />
                    </h1>
                </div>

                <div class="flex md:mx-16">
                    <div class="m-6  ">
                        <span>Time:</span>
                        <input class="border border-black-400 pl-1" size="3" type="text" name="time" placeholder="Time" value="@ViewBag.Question.Time">
                    </div>
                    <div class="m-6  ">
                        <span>Mark:</span>
                        <input class="border border-black-400 pl-1" size="3" type="text" name="mark" placeholder="Mark" value="@ViewBag.Question.Mark">
                    </div>
                    <div class="m-6">
                        @if (ViewBag.Question.GivenWord ==true)
                        {
                            <input type="checkbox" name="givenword" value="true" checked>
                        }
                        else
                        {
                            <input type="checkbox" name="givenword" value="true" >
                        }
                        <label for="givenword">Given Word</label>
                    </div>
                </div>


            </div>

            <div class="w-full items-center bg-gray p-6 border border-black-400">
                <div class="w-10/12  float-left mt-3">
                    <textarea class="p-2 w-full" name="questionText" rows="4" id="questionText" placeholder="Paragraph ...">@ViewBag.Question.Text</textarea>
                </div>
            </div>

            <div class="text-center flex flex-wrap items-center justify-center column-gap inline-block mt-4">
                <input type="submit" class="btn btn-bs-primary w-3/12" name="submit" value="Save Changes">
            </div>

        </div>
    }
</div>

