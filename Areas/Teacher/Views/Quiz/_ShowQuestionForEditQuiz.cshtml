@model IPagedList<InClassVoting.Models.Question>
@using PagedList.Mvc;
@using PagedList;
<table class="table">
    <thead>
        <tr>

            <th scope="col">No</th>
            <td scope="col"> </td>
            <th style="width: 47%;" scope="col">Question</th>

            <th scope="col">Type</th>
            <th scope="col">Mark</th>

        </tr>
    </thead>
     <tbody>
            @{
                int countQuestion = 0;
            }

            @if (ViewBag.Questions != null)
            {
                foreach (var questions in ViewBag.Questions)
                {
                    countQuestion++;
                    <tr>
                        <th scope="row">@countQuestion</th>
                        <td><input type="checkbox" class="form-check-input" id="exampleCheck1" name="qID" value="@questions.QID"></td>
                        <td><a href="#" type="button">@questions.Text</a></td>
                        <td>@questions.QuestionType.Name</td>
                        <td>@questions.Mark</td>
                    </tr>
                }
            }
            @if (ViewBag.Matchings != null)
            {
                foreach (var matching in ViewBag.Matchings)
                {
                    countQuestion++;
                    <tr>
                        <th scope="row">@countQuestion</th>
                        <td><input type="checkbox" class="form-check-input" id="exampleCheck1" name="mID" value="@matching.MID"></td>
                        <td><a href="#" type="button">@matching.ColumnA @matching.ColumnB</a></td>
                        <td>Matching</td>
                        <td>@matching.Mark</td>
                    </tr>
                }
            }
        </tbody>
    </table>
     