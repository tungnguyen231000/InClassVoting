@model IPagedList<InClassVoting.Models.Question>
@using PagedList.Mvc;
@using PagedList;
<table class="table">
    <thead>
        <tr>

            <th scope="col">No</th>
            <td scope="col"> </td>
            <th style="width: 47%;" scope="col">Question</th>
            <th scope="col">Type</th>
            <th scope="col">Mark</th>

        </tr>
    </thead>
    <tbody>
        @{
            int countQuestion = 0;
        }

        @if (ViewBag.Questions != null)
        {
            foreach (var questions in ViewBag.Questions)
            {
                countQuestion++;
        <tr>
            <th scope="row">@countQuestion</th>
            @{ string idAndType = questions.QID + "-" + questions.Qtype; }
            <td><input type="checkbox" class="form-check-input" id="exampleCheck1" name="qIDAndType" value="@idAndType"></td>
            <td><a href="#" type="button">@questions.Text</a></td>
            <td>
                @if (questions.Qtype == 5)
                {
                    <span>Matching</span> }
                else
                {
                    @questions.QuestionType.Name}
            </td>
            <td>@questions.Mark</td>
        </tr>
            }
        }
