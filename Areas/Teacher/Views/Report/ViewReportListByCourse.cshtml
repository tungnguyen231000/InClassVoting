@model IPagedList<InClassVoting.Models.QuizDone>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "ViewReportListByCourse";
    Layout = "~/Areas/Teacher/Views/Shared/_ReportLayout.cshtml";
}


<div class="bg-gray-100 flex-1 p-6 md:mt-16">
    <!-- start navbar -->

    <div style="  height: 90px;">
        <div style="display: flex; height: 40px;">
            <h1 class="h5 mg-top">@ViewBag.Course.Name</h1>
            <!-- Example single danger button -->
        </div>
    </div>
    <!-- end navbar -->
    <!-- General Report -->
    @if (Model.Count() == 0)
    {
        <p style="text-align: center; margin-top: 10%; font-size: larger;">There Is No Quiz In This Course</p>
    }
    else
    {
        <div class="block-search-dropdown">
            <div class="search-size text-gray-600 md:w-full md:flex md:flex-row md:justify-evenly md:pb-10 md:mb-10 md:border-b md:border-gray-200">


                @using (Html.BeginForm("ViewReportListByCourse", "Report", FormMethod.Get))
                {<div class="mr-2 transition duration-500 px-3 border-b">
                        <input type="hidden" value="@ViewBag.Course.CID" name="cid" />
                        Search: &nbsp;<input class="search-box flex-1" type="text" name="searchText" placeholder="..." value="@ViewBag.Search">
                        <button type="submit" class="search-box"> <i class="fad fa-search"></i> </button>
                    </div>

                }
            </div>

        </div>


        <div class="tb-mg-top">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th style="width: 30%;" scope="col">Quiz Name</th>
                        <th scope="col">Total Mark</th>
                        <th scope="col">Done Date</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var quiz in Model)
                    {
                        ViewBag.QuizCount = ViewBag.QuizCount + 1;
                    <tr>
                        <th scope="row">@ViewBag.QuizCount</th>
                        <td><a href="~/Teacher/Report/ReportByQuestion?qzid=@quiz.QuizDoneID" type="button">@quiz.Quiz_Name ( @quiz.NumOfQuestion Questions)</a></td>
                        <td>@quiz.TotalMark</td>
                        @{
                            string date = quiz.CreatedDate.HasValue ? quiz.CreatedDate.Value.ToString("dd-MM-yyyy") : "Not Found";

                        }
                        <td>@date</td>

                    </tr>
                    }

                </tbody>
            </table>

            <div class="paging">
                @Html.PagedListPager(Model, i => Url.Action("ViewReportListByCourse", "Report",
            new { i, cid = Request.QueryString["cid"], searchText = Request.QueryString["searchText"] }))

            </div>
        </div>


    }
</div>



