
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login.css">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <meta name="google-signin-client_id" content="816925739984-c3a18qnso09fra877b75gc1h8jgjg4dn.apps.googleusercontent.com">
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/Login.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <div class="container ">
        <div style="margin-top:70px" class="row ">

            <div class="col-6">
                <div style="width: fit-content" class="home">
                    <img style="margin: auto; height: 200px;" src="~/Content/img/logo_dai-hoc-fpt.jpg" />
                    <div style="text-align: center;">
                        <strong class="capitalize cl-icon" style="color: #0633f9; width: fit-content; font-size: larger; ">Welcome To In Class Voting System</strong>

                        <label id="label_Error" style="color: red; margin-top: 5px;display:none">Tài khoản của bạn không được phép đăng nhập vào hệ thống</label>
                    </div>

                    <img style="padding-top: 20px; height: 200px;padding-left:170px" src="~/Content/img/system.png" />
                </div>
            </div>
            <div class="col-6 borderCol4 shadow">
                @using (Html.BeginForm("LoginAdmin", "HomeTotal", FormMethod.Post))
                {
                    <div class="pd-20">
                        <h1 class="txtLogin">Login</h1>
                        <h5 class="txtLogin">User name :</h5>
                        <input name="inputUserName" class="txtInput color-input" type="text" required />
                        <h5 class="txtLogin">Password :</h5>
                        <input name="inputPassword" class="txtInput color-input" type="password" required />
                        <button type="submit" class="txt-btn-login btnSignIn txtInput txtPosLogin ">Login</button>
                    </div>
                }
                <div class="txtInput btnSignIn">
                    <div class="posGG" id="my-signin2"></div>
                </div>

            </div>
        </div>
    </div>


    <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>

</body>

</html>
